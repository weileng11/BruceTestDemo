<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bruce.testdemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:indicator_height="10dp"
                app:indicator_width="10dp"
                app:title_height="40dp"
                app:title_textcolor="@color/red" />


            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_launcher"
        android:orientation="vertical"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/imagewatcher"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试仿微信的imagewatcher" />

    <Button
        android:id="@+id/imagewatcher_photo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试仿微信的wxphoto" />

    <Button
        android:id="@+id/imagewatcher_photo_rv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试仿微信的wxphotorv" />

    <Button
        android:id="@+id/qq_index"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试QQ动态底部栏" />

    <Button
        android:id="@+id/rv_sx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试不带动画rv上啦下啦刷新" />

    <Button
        android:id="@+id/rv_anim_sx"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试带动画rv上啦下啦刷新" />

    <Button
        android:id="@+id/pagerslidingtastip"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试pagerslidingtabSttip" />

    <Button
        android:id="@+id/bugly"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试bugly热更新" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
