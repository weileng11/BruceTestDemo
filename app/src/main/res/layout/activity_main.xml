<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bruce.testdemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_launcher"
        android:orientation="vertical"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/imagewatcher"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试仿微信的imagewatcher"
        />
    <Button
    android:id="@+id/imagewatcher_photo"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="测试仿微信的wxphoto"
    />

    <Button
        android:id="@+id/imagewatcher_photo_rv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试仿微信的wxphotorv"
        />
    <Button
        android:id="@+id/qq_index"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="测试QQ动态底部栏"
        />
</LinearLayout>
